{
    "pyright.enable": true,
    "languageserver": {
        "golang":{
            "command": "$GOPATH/bin/gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "dhall":{
            "command": "dhall-lsp-server",
            "filetypes": ["dhall"]
        }
    },
    "diagnostic.virtualText": false,
    "pyright.inlayHints.variableTypes": false,
    "pyright.inlayHints.functionReturnTypes": false,
    "diagnostic.showUnused": true,
    "diagnostic.hintSign": " "
}
