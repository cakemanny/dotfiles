{
    "jedi.enable": true,
    "languageserver": {
        "golang":{
            "command": "$GOPATH/bin/gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "dhall":{
            "command": "dhall-lsp-server",
            "filetypes": ["dhall"]
        },
        "zig": {
            "command": "zls",
            "filetypes": ["zig"]
        }
    },
    "diagnostic.virtualText": true
}
