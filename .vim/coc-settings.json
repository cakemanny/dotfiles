{
    "languageserver": {
        "golang":{
            "command": "$GOPATH/bin/gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "dhall":{
            "command": "dhall-lsp-server",
            "filetypes": ["dhall"]
        },
        "zig": {
            "command": "zls",
            "filetypes": ["zig"]
        },
        "ocaml":{
            "command": "ocamllsp",
            "filetypes": ["ocaml"]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal"],
            "filetypes": ["haskell", "lhaskell"]
        }
    },
    "diagnostic.virtualText": false,
    "inlayHint.enable": false
}
